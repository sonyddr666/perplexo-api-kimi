# ============================================
# Perplexo Bot - Configurações
# ============================================

# --------------------------------------------
# Telegram Bot
# --------------------------------------------
TELEGRAM_TOKEN=seu_token_bot_aqui

# --------------------------------------------
# Perplexity
# --------------------------------------------
# Session token para web scraping (obtenha em perplexity.ai -> DevTools -> Cookies)
PERPLEXITY_SESSION_TOKEN=seu_session_token_aqui

# API Key opcional (se usar API oficial em vez de scraper)
PERPLEXITY_API_KEY=sua_api_key_opcional

# --------------------------------------------
# Configurações de Deploy
# --------------------------------------------
# URL para webhook do Telegram (deixe vazio para usar polling em desenvolvimento)
WEBHOOK_URL=https://seu-dominio.com/telegram

# URL do MCP Server (interno)
MCP_API_URL=http://127.0.0.1:5000

# Porta do MCP Server
MCP_PORT=5000

# Porta do bot Telegram
TELEGRAM_PORT=8000

# --------------------------------------------
# Admin e Segurança
# --------------------------------------------
# Seu ID do Telegram para comandos administrativos
ADMIN_USER_ID=123456789

# --------------------------------------------
# Rate Limiting
# --------------------------------------------
# Máximo de mensagens por janela de tempo
RATE_LIMIT_MESSAGES=20

# Janela de tempo em segundos (3600 = 1 hora)
RATE_LIMIT_WINDOW=3600

# --------------------------------------------
# Database
# --------------------------------------------
# Caminho para o banco SQLite
DATABASE_PATH=data/perplexo.db

# --------------------------------------------
# Logging
# --------------------------------------------
# Nível de log: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Caminho para logs
LOG_PATH=logs/perplexo.log

# --------------------------------------------
# WhatsApp (Baileys)
# --------------------------------------------
# Nome da sessão WhatsApp
WHATSAPP_SESSION_NAME=perplexo-session

# --------------------------------------------
# OpenAI (para Whisper - transcrição de voz)
# --------------------------------------------
OPENAI_API_KEY=sua_openai_api_key_opcional

# --------------------------------------------
# Redis (opcional - para cache avançado)
# --------------------------------------------
# Deixe vazio para usar apenas SQLite
REDIS_URL=
# REDIS_URL=redis://localhost:6379/0
